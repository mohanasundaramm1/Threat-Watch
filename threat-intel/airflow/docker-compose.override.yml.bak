version: "3.8"

services:
  postgres:
    image: postgres:15
    container_name: airflow-postgres
    environment:
      POSTGRES_USER: airflow
      POSTGRES_PASSWORD: airflow
      POSTGRES_DB: airflow
    ports:
      - "5433:5432"   # host 5433 â†’ container 5432
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U airflow -d airflow"]
      interval: 5s
      timeout: 5s
      retries: 20
    volumes:
      - pgdata:/var/lib/postgresql/data

  airflow-local:
    environment:
      # Use a real executor + DB (Airflow 2.7+ uses DATABASE section)
      AIRFLOW__CORE__EXECUTOR: LocalExecutor
      AIRFLOW__DATABASE__SQL_ALCHEMY_CONN: postgresql+psycopg2://airflow:airflow@postgres:5432/airflow
      # Give yourself sane parallelism (tune later)
      AIRFLOW__CORE__PARALLELISM: "16"
      AIRFLOW__CORE__MAX_ACTIVE_TASKS_PER_DAG: "8"
      AIRFLOW__CORE__MAX_ACTIVE_RUNS_PER_DAG: "3"
      # Ensure Postgres driver present
      _PIP_ADDITIONAL_REQUIREMENTS: "psycopg2-binary"
    depends_on:
      postgres:
        condition: service_healthy
    # Start everything in one container (webserver + scheduler + triggerer)
    command: >
      bash -lc "
        pip install --no-input --disable-pip-version-check ${_PIP_ADDITIONAL_REQUIREMENTS} &&
        airflow db upgrade &&
        (airflow webserver &) &&
        (airflow scheduler &) &&
        (airflow triggerer &) &&
        wait -n
      "

volumes:
  pgdata:
